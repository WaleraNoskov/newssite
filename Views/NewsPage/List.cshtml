@using newsSite.ViewModels;
@model PostListViewModel;

<p class="h1">За все время <a class="btn btn-secondary" asp-controller="EditNews" asp-action="AddOrEdit" asp-route-needEdit=@(false)>Добавить</a></p>
<ul class="list-group">
    @foreach (var i in Model.Posts)
    {
        <li class="list-group-item"><a asp-controller="EditNews" asp-action="Post" asp-route-id="@(i.Id)">@i.Title</a> - @(i.Сategory?.Name)</li>
    }
</ul>

<p class="text-center">
    @for (int i = 0; i < @Model.PostsCount / 10; i++)
    {
        <a class="text-left" asp-controller="news" asp-action="list" asp-route-count="@i">@(i+1) </a>
    }
</p>